<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="gpt.css" />
    <title>Cadastro</title>
  </head>

  <body>
    <%- include('titulo')%>
    <div class="centro">
      <div class="container">
        <h1>Cadastro Roteiro</h1>
        <form action="/cad-roteiro" method="post" class="cad">
          <label for="nome">Título:</label>
          <input
            name="nome"
            id="nome"
            type="text"
            placeholder="Digite o título aqui"
            required
          />
          <br /><br />
          <label for="descricao">Descrição:</label>
          <input
            name="descricao"
            id="descricao"
            type="text"
            placeholder="Digite a descrição"
            required
          />
          <br /><br />
          <label for="destino">Locais:</label>
          <input
            name="destino"
            id="destino"
            type="text"
            placeholder="Digite os locais"
            required
          />
          <br /><br />
          <label for="preco">Valor:</label>
          <input
            name="preco"
            id="preco"
            type="text"
            placeholder="Digite o valor"
            required
          />
          <br /><br />
          <label for="duracao">Duração:</label>
          <input
            name="duracao"
            id="duracao"
            type="text"
            placeholder="Digite a duração (ex: 3 dias)"
            required
          />
          <br /><br />
          <% if (typeof resultado !== 'undefined') {
            if (status) { %> 
            <p style="color: rgb(17, 255, 0)"><%= resultado %></p>
          <% } else { %>
            <p style="color: rgb(128, 0, 0)"><%= resultado %></p>
          <% }
           } %>
          <input type="submit" value="Salvar" />
        </form>
        <br />
      </div>
    </div>
  </body>
</html>